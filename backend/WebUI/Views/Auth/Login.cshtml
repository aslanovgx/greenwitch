@using WebUI.Models
@model LoginViewModel

@{
    ViewData["Title"] = "Admin Giriş";
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Giriş</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e9ecef); /* ağ-boz arası */
            font-family: 'Segoe UI', sans-serif;
            color: #212529;
        }

        .login-container {
            max-width: 420px;
            margin: 80px auto;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        }

            .login-container h3 {
                text-align: center;
                margin-bottom: 30px;
                color: #343a40;
            }

        .form-label {
            color: #495057;
        }

        .form-control {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            color: #212529;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: none;
            }

        .btn-primary {
            width: 100%;
            background-color: #0d6efd;
            border: none;
            padding: 10px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .error-text {
            color: #dc3545;
            font-size: 0.9rem;
        }

        .alert {
            background-color: #f8d7da;
            border: none;
            color: #842029;
        }

        .logo {
            text-align: center;
            margin-bottom: 25px;
        }

            .logo img {
                max-height: 60px;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">
            <img src="/images/logo.jpg" alt="SaatAz Logo" />
        </div>
        <h3>Admin Panelə Giriş</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="error-text"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifrə</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="error-text"></span>
            </div>

            <button type="submit" class="btn btn-primary">Daxil ol</button>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mt-3 alert">
                    E-mail və ya şifrə yanlışdır!
                </div>
            }
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>