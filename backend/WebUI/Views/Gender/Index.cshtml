@model List<ResultGenderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col-md-12">
        <div class="card rounded-3 shadow-sm">
            <div class="card-header rounded-top-3 bg-light">
                <div class="card-title fw-bold">Gender Listi</div>
            </div>
            <div class="card-body rounded-bottom-3">
                <div class="card-sub mb-3 text-muted">
                    Gender ilə bağlı əməliyyatları aşağıdan görə bilərsiniz.
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover text-nowrap rounded-3 overflow-hidden">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Gender Adı</th>
                                <th scope="col">Yenilə</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a href="/Gender/UpdateGender/@item.Id" class="btn btn-outline-success rounded-pill px-3">Yenilə</a>
                                    </td>
                                    <td>
                                        <a href="/Gender/DeleteGender/@item.Id" class="btn btn-outline-danger rounded-pill px-3">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Gender/CreateGender/" class="btn btn-outline-primary rounded-pill mt-3 px-4">Yeni Gender Əlavə Et</a>
                </div>
            </div>
        </div>
    </div>
</div>